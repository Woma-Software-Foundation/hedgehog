def fib(n) {
    let a, b = 0, 1
    while a < n {
        a, b = b, a+b
        puts(b)
    }
}
puts("fib(100):")
fib(100)
puts()

def add(a, b) {
    return a + b
}

puts("3+4 =", add(3, 4))

def fac(n) {
    if n <= 1 {
        return 1
    } else {
        return fac(n-1) * n
    }
}

puts("fac(10) =", fac(10))

